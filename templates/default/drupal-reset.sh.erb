# Script to destroy Drupal project, Database, and Database user
# Generated by Chef 
#! /bin/sh

drush --root=<%= @root_dir %> archive-dump --tar-options="--exclude=.git"
<%= @db_connection %> -e "DROP DATABASE <%= @db %>;"
<%= @db_connection %> -e "REVOKE ALL FROM <%= @user %>; FLUSH PRIVILEGES;"
<%= @db_connection %> -e "DROP USER '<%= @user %>'@'localhost';"
rm -rf <%= @root_dir %>
