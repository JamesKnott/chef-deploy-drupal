# Script to fix permissions of Drupal site root directory
# Generated by Chef 
#! /bin/sh

# run this script in the Drupal root directory
echo "setting filesystem permissions for Drupal root directory at `pwd` ..."

chown -R <%= @user %>:<%= @group %> .
chmod -R g+s .
chmod u=rx,g=rwx,o-rwx . 
find . -type f -exec chmod u=r,g=rw,o-rwx '{}' \;
find . -type d -exec chmod u=rx,g=rwx,o-rwx '{}' \;
chmod ug=rwx,o-rwx <%= @files_path %>


ls -ld | awk '{print $3":"$4, "Project root ownership"}'
ls -ld | awk '{print $1, "permissions for the Project root"}'
ls -l index.php | awk '{print $1, "permissions for all files"}'
ls -ld includes | awk '{print $1, "permissions for all directories"}'
ls -ld sites/default/files | awk '{print $1,"permissions for the Drupal "files" folder"}'

